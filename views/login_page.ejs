<%- include('./common/header')%>
<link rel="stylesheet" href="CSS/login_page.css">
</head>
<body>

<h1 class="display-6 text-center text-white p-3 "> Online Voting System </h1>

<div class="form-container">
    <div class="form-desc"> LOGIN </div>
    <form class="form-details" action="/login" method="POST">    
        <input type="email" name="email" id="email" placeholder="email">
        <input type="password" name="password" id="password" placeholder="password">
        <input type="submit" class="btn btn-primary" value="LOGIN">
        <% if(typeof(err)!="undefined") { %>
            <div class="alert alert-danger p-0 pt-1" role="alert">
                <ul>
                    <% for(let i=0;i<err.length;i++){ %>
                        
                        <li><%= err[i] %></li>
                    <% } %>
                </ul>
            </div>
        <% } %>
    </form>
    <div class="change-button">
        <a href="/register">
            <button class="btn register-button" onclick="">REGISTER</button>
        </a>
    </div>
</div>


<script src="JS/login_register.js"></script>
<%- include('./common/footer')%>